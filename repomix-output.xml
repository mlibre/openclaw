{
	"messages": {
		"ackReactionScope": "group-mentions"
	},
	"agents": {
		"defaults": {
			"maxConcurrent": 4,
			"subagents": {
				"maxConcurrent": 8
			},
			"compaction": {
				"mode": "safeguard"
			},
			"workspace": "./workspace",
			"model": {
				"primary": "localai/mymodel"
			},
			"models": {
				"localai/mymodel": {}
			}
		}
	},
	"models": {
		"providers": {
			"localai": {
				"baseUrl": "${MODEL_BASE_URL}",
				"apiKey": "${MODEL_API_KEY}",
				"api": "openai-completions",
				"models": [
					{
						"id": "local model",
						"name": "Local AI Model"
					}
				]
			}
		}
	},
	"gateway": {
		"mode": "local",
		"auth": {
			"mode": "password",
			"password": "${OPENCLAW_GATEWAY_PASSWORD}"
		},
		"controlUi": {
			"allowInsecureAuth": true,
			"enabled": true
		},
		"port": 8080,
		"bind": "loopback",
		"tailscale": {
